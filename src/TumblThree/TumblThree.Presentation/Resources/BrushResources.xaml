<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="DefaultForeground" Color="{StaticResource {x:Static SystemColors.ControlTextColorKey}}" />

    <SolidColorBrush x:Key="LightForeground" Color="{StaticResource {x:Static SystemColors.GrayTextColorKey}}" />

    <SolidColorBrush x:Key="ActiveForeground" Color="SkyBlue" />

    <SolidColorBrush x:Key="DarkForeground" Color="DarkBlue" />

    <SolidColorBrush x:Key="ErrorForeground" Color="SkyBlue" />

    <SolidColorBrush x:Key="DarkErrorForeground" Color="DarkBlue" />

    <SolidColorBrush x:Key="DefaultBackground" Color="{StaticResource {x:Static SystemColors.ControlColorKey}}" />

    <SolidColorBrush x:Key="DarkBackground" Color="{StaticResource {x:Static SystemColors.ControlDarkColorKey}}" />

    <SolidColorBrush x:Key="DarkTransparentBackground" Color="#BFA0A0A0" />

    <SolidColorBrush x:Key="ErrorBackgroundBlue" Color="SkyBlue" />
    
    <SolidColorBrush x:Key="ErrorBackgroundRed" Color="PaleVioletRed" />
    
    <SolidColorBrush x:Key="ErrorBackgroundPurple" Color="MediumPurple" />
    
    <SolidColorBrush x:Key="ErrorBackgroundGreen" Color="MediumSeaGreen" />

    <SolidColorBrush x:Key="DefaultBorderBrush" Color="White" />

    <SolidColorBrush x:Key="QueuedItem" Color="#FFA596FF" />

    <SolidColorBrush x:Key="ActiveItem" Color="#FF84FF84" />

    <SolidColorBrush x:Key="OfflineItem" Color="#FFFF7171" />

</ResourceDictionary>