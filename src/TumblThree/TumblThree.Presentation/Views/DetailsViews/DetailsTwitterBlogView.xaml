<UserControl x:Class="TumblThree.Presentation.Views.DetailsTwitterBlogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:p="clr-namespace:TumblThree.Presentation.Properties"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ctrl="clr-namespace:TumblThree.Presentation.Controls"
             xmlns:dd="clr-namespace:TumblThree.Presentation.DesignData"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:ei="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:Models="clr-namespace:TumblThree.Domain.Models;assembly=TumblThree.Domain"
             xmlns:Extensions="clr-namespace:TumblThree.Presentation.Extensions"
             mc:Ignorable="d" d:DataContext="{d:DesignInstance dd:SampleDetailsViewModel, IsDesignTimeCreatable=True}"
             d:DesignHeight="720" d:DesignWidth="400" Background="{StaticResource DefaultBackground}"
             LostFocus="View_LostFocus">

    <UserControl.Resources>
        <ObjectDataProvider MethodName="GetValues"
        ObjectType="{x:Type sys:Enum}"
        x:Key="TumblrBlogCrawlerTypes">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="Models:TumblrBlogCrawlerTypes" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>

    <Grid>
        <Grid.Resources>
            <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                <Setter Property="TextTrimming" Value="CharacterEllipsis" />
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label Content="{x:Static p:Resources.SelectABlog}" BorderThickness="0,0,0,1" Padding="15,7" Grid.Row="0">
            <Label.Style>
                <Style TargetType="Label" BasedOn="{StaticResource {x:Type Label}}">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding BlogFile}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Label.Style>
        </Label>

        <Label Content="{Binding Count}" ContentStringFormat="{x:Static p:Resources.ShowItems}"
               BorderThickness="0,0,0,1" BorderBrush="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
               Padding="15,7" Grid.Row="0">
            <Label.Resources>
                <sys:Int32 x:Key="multiSelection">1</sys:Int32>
            </Label.Resources>
            <Label.ToolTip>
                <ctrl:SuperToolTip Title="{Binding BlogFile.Name}"
                                   Description="{Binding BlogFile.Url}" />
            </Label.ToolTip>
            <Label.Style>
                <Style TargetType="Label" BasedOn="{StaticResource {x:Type Label}}">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <Trigger Property="Content" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </Trigger>
                        <DataTrigger Value="True">
                            <DataTrigger.Binding>
                                <MultiBinding Converter="{StaticResource IsLessThanConverter}">
                                    <Binding Path="Count" />
                                    <Binding Source="{StaticResource multiSelection}" />
                                </MultiBinding>
                            </DataTrigger.Binding>
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Label.Style>
        </Label>

        <Label Content="{Binding BlogFile.Name}" BorderThickness="0,0,0,1"
               BorderBrush="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" Padding="15,7" Grid.Row="0">
            <Label.ToolTip>
                <ctrl:SuperToolTip Title="{Binding BlogFile.Name}"
                                   Description="{Binding BlogFile.Url}" />
            </Label.ToolTip>
            <Label.ContextMenu>
                <ContextMenu>
                    <MenuItem Command="{Binding CopyUrlCommand}" Header="{x:Static p:Resources.CopyUrl}" />
                </ContextMenu>
            </Label.ContextMenu>
            <Label.Style>
                <Style TargetType="Label" BasedOn="{StaticResource {x:Type Label}}">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Count}" Value="1">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Label.Style>
        </Label>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1">
            <Grid Margin="11">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="{StaticResource Layout.ColumnSpace}" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="{StaticResource Layout.ColumnSpace}" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="{StaticResource Layout.LargeRowSpace}" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Label Content="{x:Static p:Resources.Name}" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" />
                <Label Grid.Column="3" Grid.ColumnSpan="3" Grid.Row="0">
                    <TextBlock Text="{Binding BlogFile.Name}" TextTrimming="CharacterEllipsis"
                               ToolTipService.IsEnabled="{Binding BlogFile.Description, Converter={StaticResource NullToBoolConverter}, ConverterParameter=includeEmpty}">
                        <TextBlock.ToolTip>
                            <ctrl:SuperToolTip Title="{x:Static p:Resources.Description}"
                                               Description="{Binding BlogFile.Description}" />
                        </TextBlock.ToolTip>
                    </TextBlock>
                </Label>

                <Label Content="{x:Static p:Resources.Url}" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2" />
                <Label Grid.Column="3" Grid.ColumnSpan="3" Grid.Row="2">
                    <TextBlock Text="{Binding BlogFile.Url}" TextTrimming="CharacterEllipsis" />
                </Label>
                <Label Content="{x:Static p:Resources.Progress}" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="4" />
                <ProgressBar Value="{Binding BlogFile.Progress, Mode=OneWay}" Height="15" Minimum="0" Maximum="100"
                             Foreground="{StaticResource ActiveForeground}" Grid.Column="3" Grid.ColumnSpan="5"
                             Grid.Row="4" />

                <Label Content="{x:Static p:Resources.Rating}" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="6" />
                <ctrl:Rating Value="{Binding BlogFile.Rating, Converter={StaticResource RatingToStarsConverter}}"
                             Padding="2,0" Grid.Column="3" Grid.ColumnSpan="3" Grid.Row="6" TickPlacement="TopLeft" />

                <Separator Grid.ColumnSpan="7" Grid.Column="0" Grid.Row="8" Margin="0" />
                <TabControl x:Name="Tabs" Grid.Column="0" Grid.ColumnSpan="6" Grid.Row="10" SelectedIndex="{Binding BlogFile.SettingsTabIndex}" Background="{StaticResource DefaultBackground}">
                    <TabItem Header="{x:Static p:Resources.BlogSettings}">
                        <Grid Margin="0">
                            <Grid.Resources>
                                <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                </Style>
                                <sys:Int32 x:Key="duplicatesZero">0</sys:Int32>
                            </Grid.Resources>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="{StaticResource Layout.ColumnSpace}" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="{StaticResource Layout.ColumnSpace}" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="{StaticResource Layout.RowSpace}"/>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="{StaticResource Layout.RowSpace}"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="{StaticResource Layout.RowSpace}"/>
                                <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="{StaticResource Layout.RowSpace}"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="{StaticResource Layout.RowSpace}" />
                            </Grid.RowDefinitions>

                            <Label Content="{x:Static p:Resources.Posts}" Grid.Column="0" Grid.ColumnSpan="2"
                           Grid.Row="0" />
                            <Label Content="{Binding BlogFile.Posts, Converter={StaticResource IntToDisplayValueConverter}}"
                               Margin="3,0,0,0" Grid.Column="1" Grid.Row="0" />

                            <CheckBox Content="{x:Static p:Resources.DownloadImages}"
                                  IsChecked="{Binding BlogFile.DownloadPhoto, Mode=TwoWay}" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2"
                                  Margin="3,0,0,0" Padding="3,0,0,0">
                                <CheckBox.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipDetailsStats}" />
                                            <TextBlock xml:space="preserve"
                                                   Text="{x:Static p:Resources.ToolTipDetailsStatsDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </CheckBox.ToolTip>
                            </CheckBox>

                            <Label Grid.Column="3" Grid.ColumnSpan="3" Grid.Row="2" Padding="0" Margin="3,0,0,0" >
                                <Label.Content>
                                    <MultiBinding Converter="{StaticResource DetailsProgressConverter}">
                                        <Binding Path="BlogFile.DownloadedPhotos" />
                                        <Binding Path="BlogFile.Photos" />
                                        <Binding Path="BlogFile.DuplicatePhotos" />
                                    </MultiBinding>
                                </Label.Content>
                                <Label.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipDetailsStats}" />
                                            <TextBlock xml:space="preserve"
                                                   Text="{x:Static p:Resources.ToolTipDetailsStatsDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </Label.ToolTip>
                            </Label>

                            <CheckBox Content="{x:Static p:Resources.DownloadVideosShort}"
                                  IsChecked="{Binding BlogFile.DownloadVideo, Mode=TwoWay}" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="4"
                                  Margin="3,0,0,0" Padding="3,0,0,0">
                                <CheckBox.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipDetailsStats}" />
                                            <TextBlock xml:space="preserve"
                                                   Text="{x:Static p:Resources.ToolTipDetailsStatsDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </CheckBox.ToolTip>
                            </CheckBox>

                            <Label Grid.Column="3" Grid.ColumnSpan="3" Grid.Row="4" Padding="0" Margin="3,0,0,0" >
                                <Label.Content>
                                    <MultiBinding Converter="{StaticResource DetailsProgressConverter}">
                                        <Binding Path="BlogFile.DownloadedVideos" />
                                        <Binding Path="BlogFile.Videos" />
                                        <Binding Path="BlogFile.DuplicateVideos" />
                                    </MultiBinding>
                                </Label.Content>
                                <Label.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipDetailsStats}" />
                                            <TextBlock xml:space="preserve"
                                                   Text="{x:Static p:Resources.ToolTipDetailsStatsDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </Label.ToolTip>
                            </Label>

                            <CheckBox Content="{x:Static p:Resources.DownloadTexts2}"
                                  IsChecked="{Binding BlogFile.DownloadText, Mode=TwoWay}" Grid.Column="0" Grid.ColumnSpan="2" Margin="3,0,0,0"
                                  Padding="3,0,0,0" Grid.Row="6">
                                <CheckBox.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipDetailsStats}" />
                                            <TextBlock xml:space="preserve"
                                                   Text="{x:Static p:Resources.ToolTipDetailsStatsDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </CheckBox.ToolTip>
                            </CheckBox>

                            <Label Grid.Column="3" Grid.ColumnSpan="3" Grid.Row="6" Padding="0" Margin="3,0,0,0" >
                                <Label.Content>
                                    <MultiBinding Converter="{StaticResource DetailsProgressConverter}">
                                        <Binding Path="BlogFile.DownloadedTexts" />
                                        <Binding Path="BlogFile.Texts" />
                                        <Binding Source="{StaticResource duplicatesZero}" />
                                    </MultiBinding>
                                </Label.Content>
                                <Label.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipDetailsStats}" />
                                            <TextBlock xml:space="preserve"
                                                   Text="{x:Static p:Resources.ToolTipDetailsStatsDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </Label.ToolTip>
                            </Label>

                            <Label Content="{x:Static p:Resources.DownloadPages}" Grid.Column="0" Grid.Row="8" Margin="3,0,3,0" Padding="3,0,3,0">
                                <Label.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipDownloadPages}" />
                                            <TextBlock xml:space="preserve" Text="{x:Static p:Resources.ToolTipDownloadPagesDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </Label.ToolTip>
                            </Label>

                            <TextBox Grid.Column="1" Grid.Row="8" Padding="0" 
                                 Text="{Binding BlogFile.DownloadPages, Mode=TwoWay, ValidatesOnDataErrors=True}">
                                <TextBox.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipDownloadPages}" />
                                            <TextBlock xml:space="preserve"
                                                   Text="{x:Static p:Resources.ToolTipDownloadPagesDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </TextBox.ToolTip>
                            </TextBox>

                            <Label Content="{x:Static p:Resources.PageSize}" Grid.Column="3" Grid.Row="8" Margin="3,0,3,0" Padding="3,0,3,0">
                                <Label.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipPageSize}" />
                                            <TextBlock xml:space="preserve" Text="{x:Static p:Resources.ToolTipPageSizeDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </Label.ToolTip>
                            </Label>

                            <TextBox Grid.Column="4" Grid.ColumnSpan="2" Grid.Row="8" Padding="0" 
                                 Text="{Binding BlogFile.PageSize, Mode=TwoWay, ValidatesOnDataErrors=True}">
                                <TextBox.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipPageSize}" />
                                            <TextBlock xml:space="preserve"
                                                   Text="{x:Static p:Resources.ToolTipPageSizeDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </TextBox.ToolTip>
                            </TextBox>

                            <Label Content="{x:Static p:Resources.DownloadFrom}" Grid.Column="0" Grid.Row="10" Margin="3,0,3,0" Padding="3,0,3,0">
                                <Label.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipDownloadFrom}" />
                                            <TextBlock xml:space="preserve" Text="{x:Static p:Resources.ToolTipDownloadFromDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </Label.ToolTip>
                            </Label>

                            <TextBox Grid.Column="1" Grid.Row="10" Padding="0" 
                                 Text="{Binding BlogFile.DownloadFrom, Mode=TwoWay, ValidatesOnDataErrors=True}">
                                <TextBox.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipDownloadFrom}" />
                                            <TextBlock xml:space="preserve"
                                                   Text="{x:Static p:Resources.ToolTipDownloadFromDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </TextBox.ToolTip>
                            </TextBox>

                            <Label Content="{x:Static p:Resources.DownloadTo}" Grid.Column="3" Grid.Row="10" Margin="3,0,3,0" Padding="3,0,3,0">
                                <Label.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipDownloadTo}" />
                                            <TextBlock xml:space="preserve" Text="{x:Static p:Resources.ToolTipDownloadToDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </Label.ToolTip>
                            </Label>

                            <TextBox Grid.Column="4" Grid.ColumnSpan="2" Grid.Row="10" Padding="0" 
                                 Text="{Binding BlogFile.DownloadTo, Mode=TwoWay, ValidatesOnDataErrors=True}">
                                <TextBox.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipDownloadTo}" />
                                            <TextBlock xml:space="preserve"
                                                   Text="{x:Static p:Resources.ToolTipDownloadToDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </TextBox.ToolTip>
                            </TextBox>

                            <Label Content="{x:Static p:Resources.Tags}" Grid.Column="0" Grid.Row="12" Margin="3,0,3,0" Padding="3,0,3,0">
                                <Label.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipTags}" />
                                            <TextBlock xml:space="preserve" Text="{x:Static p:Resources.ToolTipTagsDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </Label.ToolTip>
                            </Label>

                            <TextBox Grid.Column="1" Grid.ColumnSpan="5" Grid.Row="12" Padding="0" 
                                 Text="{Binding BlogFile.Tags, Mode=TwoWay, ValidatesOnDataErrors=True}">
                                <TextBox.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipTags}" />
                                            <TextBlock xml:space="preserve"
                                                   Text="{x:Static p:Resources.ToolTipTagsDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </TextBox.ToolTip>
                            </TextBox>

                            <Label Content="{x:Static p:Resources.FileDownloadLocation}" Grid.Column="0" Grid.Row="14" Margin="3,0,3,0" Padding="3,0,3,0">
                                <Label.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipFileDownloadLocation}" />
                                            <TextBlock xml:space="preserve" Text="{x:Static p:Resources.ToolTipFileDownloadLocationDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </Label.ToolTip>
                            </Label>

                            <TextBox Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="14" Padding="0" 
                                Text="{Binding BlogFile.FileDownloadLocation, Mode=TwoWay, ValidatesOnDataErrors=True}">
                                <TextBox.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipFileDownloadLocation}" />
                                            <TextBlock xml:space="preserve"
                                                Text="{x:Static p:Resources.ToolTipFileDownloadLocationDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </TextBox.ToolTip>
                            </TextBox>

                            <Button x:Name="browseFileDownloadLocationButton" Content="{x:Static p:Resources.Browse}"
                    Command="{Binding BrowseFileDownloadLocationCommand}" Grid.Column="4" Grid.ColumnSpan="2" Grid.Row="14" Margin="3,0,0,0" Padding="3,0,0,0">
                                <Button.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipFileDownloadLocation}" />
                                            <TextBlock xml:space="preserve"
                                                Text="{x:Static p:Resources.ToolTipFileDownloadLocationDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </Button.ToolTip>
                            </Button>


                            <Label Content="{x:Static p:Resources.FilenameTemplate}" Grid.Column="0" Grid.Row="16"
                                  Margin="3,0,0,0" Padding="3,0,0,0">
                                <Label.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipFilenameTemplate}" />
                                            <TextBlock xml:space="preserve"
                                                   Text="{x:Static p:Resources.ToolTipFilenameTemplateDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </Label.ToolTip>
                            </Label>

                            <TextBox Grid.Column="1" Grid.ColumnSpan="5" Grid.Row="16" Padding="0" 
                                 Text="{Binding BlogFile.FilenameTemplate, Mode=TwoWay, ValidatesOnDataErrors=True}"
                                 PreviewLostKeyboardFocus="FilenameTemplate_PreviewLostKeyboardFocus">
                                <TextBox.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipFilenameTemplate}" />
                                            <TextBlock xml:space="preserve"
                                                   Text="{x:Static p:Resources.ToolTipFilenameTemplateDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </TextBox.ToolTip>
                            </TextBox>

                            <Label Content="{x:Static p:Resources.Collection}" Grid.Column="0" Grid.Row="18"
                                  Margin="3,0,0,0" Padding="3,0,0,0">
                                <Label.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipCollection}" />
                                            <TextBlock xml:space="preserve"
                                                   Text="{x:Static p:Resources.ToolTipCollectionDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </Label.ToolTip>
                            </Label>

                            <ComboBox Grid.Column="1" Grid.Row="18" Padding="5,0,5,0"
                                      ItemsSource="{Binding Collections, Mode=OneWay}"
                                      SelectedValue="{Binding CollectionId, Mode=TwoWay, IsAsync=True}"
                                      DisplayMemberPath="Name" SelectedValuePath="Id" Height="18">
                                <ComboBox.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipCollection}" />
                                            <TextBlock xml:space="preserve"
                                                   Text="{x:Static p:Resources.ToolTipCollectionDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </ComboBox.ToolTip>
                            </ComboBox>

                            <CheckBox Content="{x:Static p:Resources.SkipGif}" IsChecked="{Binding BlogFile.SkipGif, Mode=TwoWay}"
                                  Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="21" Margin="3,0,0,0" Padding="3,0,0,0" />

                            <CheckBox Content="{x:Static p:Resources.GroupPhotoSets}" IsChecked="{Binding BlogFile.GroupPhotoSets, Mode=TwoWay}"
                                  Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="23" Margin="3,0,0,0" Padding="3,0,0,0" />

                            <CheckBox Content="{x:Static p:Resources.DownloadRebloggedPosts}"
                                  IsChecked="{Binding BlogFile.DownloadRebloggedPosts, Mode=TwoWay}" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="25"
                                  Margin="3,0,0,0" Padding="3,0,0,0" />

                            <CheckBox Content="{x:Static p:Resources.DownloadReplies}"
                                  IsChecked="{Binding BlogFile.DownloadReplies, Mode=TwoWay}" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="27"
                                  Margin="3,0,0,0" Padding="3,0,0,0" />

                            <CheckBox Content="{x:Static p:Resources.DownloadVideoThumbnails}" IsChecked="{Binding BlogFile.DownloadVideoThumbnail, Mode=TwoWay}"
                                  Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="29" Margin="3,0,0,0" Padding="3,0,0,0">
                                <CheckBox.ToolTip>
