<Window
    x:Class="TumblThree.Presentation.Views.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Models="clr-namespace:TumblThree.Domain.Models;assembly=TumblThree.Domain"
    xmlns:ctrl="clr-namespace:TumblThree.Presentation.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:p="clr-namespace:TumblThree.Presentation.Properties"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:vm="clr-namespace:TumblThree.Applications.ViewModels;assembly=TumblThree.Applications"
    xmlns:vr="clr-namespace:TumblThree.Presentation.ValidationRules"
    Title="Settings"
    Width="760"
    Height="790"
    d:DataContext="{d:DesignInstance vm:SettingsViewModel}"
    ContentRendered="Window_ContentRendered"
    ResizeMode="NoResize"
    SizeToContent="Width"
    mc:Ignorable="d">

    <Window.Resources>
        <ObjectDataProvider
            x:Key="TumblrBlogCrawlerTypes"
            MethodName="GetValues"
            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="Models:TumblrBlogCrawlerTypes" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider
            x:Key="GfycatTypes"
            MethodName="GetValues"
            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="Models:GfycatTypes" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider
            x:Key="WebmshareTypes"
            MethodName="GetValues"
            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="Models:WebmshareTypes" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider
            x:Key="UguuTypes"
            MethodName="GetValues"
            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="Models:UguuTypes" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider
            x:Key="CatBoxTypes"
            MethodName="GetValues"
            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="Models:CatBoxTypes" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider
            x:Key="MetadataType"
            MethodName="GetValues"
            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="Models:MetadataType" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>

    <ScrollViewer ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto">
        <Grid Height="Auto">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TabControl Grid.Row="0" SelectedIndex="{Binding SettingsTabIndex}">
                <TabItem Header="{x:Static p:Resources.General}" Height="22" VerticalAlignment="Top">
                    <Grid Height="Auto" MinHeight="46">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Height="Auto">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Label
                                x:Name="downloadLocationLabel"
                                Grid.Column="0"
                                MinWidth="140"
                                Margin="10"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="{x:Static p:Resources.DownloadLocation}" />
                            <TextBox
                                x:Name="downloadLocationTextBox"
                                Grid.Column="1"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                PreviewLostKeyboardFocus="DownloadLocation_PreviewLostKeyboardFocus"
                                Text="{Binding DownloadLocation, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                TextWrapping="Wrap" />
                            <Button
                                x:Name="browseDownloadLocationButton"
                                Grid.Column="2"
                                MinWidth="75"
                                Margin="10"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Command="{Binding BrowseDownloadLocationCommand}"
                                Content="{x:Static p:Resources.Browse}" />
                        </Grid>
                        <CheckBox
                            x:Name="checkBoxEnablePreview"
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="10"
                            Content="{x:Static p:Resources.EnablePreview}"
                            IsChecked="{Binding EnablePreview, Mode=TwoWay}" />
                        <CheckBox
                            x:Name="checkBoxCheckStatusOnStartup"
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="10"
                            Content="{x:Static p:Resources.CheckStatusOnStartup}"
                            IsChecked="{Binding CheckOnlineStatusOnStartup, Mode=TwoWay}" />
                        <CheckBox
                            x:Name="checkBoxDeleteIndex"
                            Grid.Row="3"
                            Grid.Column="0"
                            Margin="10"
                            Content="{x:Static p:Resources.DeleteIndex}"
                            IsChecked="{Binding DeleteOnlyIndex, Mode=TwoWay}" />
                        <CheckBox
                            x:Name="checkBoxArchiveIndex"
                            Grid.Row="4"
                            Grid.Column="0"
                            Margin="30,10,10,10"
                            Content="{x:Static p:Resources.ArchiveIndex}"
                            IsChecked="{Binding ArchiveIndex, Mode=TwoWay}"
                            IsEnabled="{Binding ArchiveIndexEnabled, Mode=OneWay}">
                            <CheckBox.ToolTip>
                                <ToolTip>
                                    <StackPanel>
                                        <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipArchiveIndex}" />
                                        <TextBlock Text="{x:Static p:Resources.ToolTipArchiveIndexDescription}" />
                                    </StackPanel>
                                </ToolTip>
                            </CheckBox.ToolTip>
                        </CheckBox>
                        <CheckBox
                            x:Name="checkBoxRemoveIndex"
                            Grid.Row="5"
                            Grid.Column="0"
                            Margin="10"
                            Content="{x:Static p:Resources.RemoveIndex}"
                            IsChecked="{Binding RemoveIndexAfterCrawl, Mode=TwoWay}" />
                        <CheckBox
                            x:Name="checkBoxPortableMode"
                            Grid.Row="6"
                            Grid.Column="0"
                            Margin="10"
                            Content="{x:Static p:Resources.PortableMode}"
                            IsChecked="{Binding PortableMode, Mode=TwoWay}">
                            <CheckBox.ToolTip>
                                <ToolTip>
                                    <StackPanel>
                                        <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipPortableMode}" />
                                        <TextBlock Text="{x:Static p:Resources.ToolTipPortableModeDescription}" />
                                    </StackPanel>
                                </ToolTip>
                            </CheckBox.ToolTip>
                        </CheckBox>
                        <CheckBox
                            x:Name="checkBoxDisplayConfirmationDialog"
                            Grid.Row="7"
                            Grid.Column="0"
                            Margin="10"
                            Content="{x:Static p:Resources.DisplayConfirmationDialog}"
                            IsChecked="{Binding DisplayConfirmationDialog, Mode=TwoWay}" />
                        <CheckBox
                            x:Name="checkBoxLoadAllDatabases"
                            Grid.Row="8"
                            Grid.Column="0"
                            Margin="10"
                            Content="{x:Static p:Resources.LoadAllDatabases}"
                            IsChecked="{Binding LoadAllDatabases, Mode=TwoWay}">
                            <CheckBox.ToolTip>
                                <ToolTip>
                                    <StackPanel>
                                        <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipLoadAllDatabases}" />
                                        <TextBlock Text="{x:Static p:Resources.ToolTipLoadAllDatabasesDescription}" />
                                    </StackPanel>
                                </ToolTip>
                            </CheckBox.ToolTip>
                        </CheckBox>
                        <CheckBox
                            x:Name="checkBoxLoadArchive"
                            Grid.Row="9"
                            Grid.Column="0"
                            Margin="30,10,10,10"
                            Content="{x:Static p:Resources.LoadArchive}"
                            IsChecked="{Binding LoadArchive, Mode=TwoWay}"
                            IsEnabled="{Binding LoadArchiveEnabled, Mode=OneWay}">
                            <CheckBox.ToolTip>
                                <ToolTip>
                                    <StackPanel>
                                        <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipLoadArchive}" />
                                        <TextBlock Text="{x:Static p:Resources.ToolTipLoadArchiveDescription}" />
                                    </StackPanel>
                                </ToolTip>
                            </CheckBox.ToolTip>
                        </CheckBox>
                        <Grid
                            Grid.Row="10"
                            Height="Auto"
                            HorizontalAlignment="Left">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <CheckBox
                                x:Name="autoDownloadEnableCheckBox"
                                Grid.Column="0"
                                Margin="10"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="{x:Static p:Resources.EnableAutoDownload}"
                                IsChecked="{Binding AutoDownload}"
                                IsEnabled="True" />
                            <TextBox
                                x:Name="autoDownloadSetTimerComboBox"
                                Grid.Column="1"
                                MinWidth="60"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center">
                                <TextBox.Text>
                                    <Binding Path="TimerInterval" UpdateSourceTrigger="PropertyChanged">
                                        <Binding.ValidationRules>
                                            <vr:TimeSpanRule />
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox.Text>
                            </TextBox>
                            <Label
                                x:Name="autoDownloadTimerLabel"
                                Grid.Column="2"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="{x:Static p:Resources.Timer}" />
                            <ComboBox
                                x:Name="autoDownloadChoseBlogsComboBox"
                                Grid.Column="3"
                                MinWidth="60"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                ItemsSource="{Binding ShellService.Settings.BlogTypes}"
                                SelectedItem="{Binding BlogType, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                SelectedValue="{Binding BlogType}"
                                SelectedValuePath="." />
                            <Label
                                x:Name="autoDownloadBlogsLabel"
                                Grid.Column="4"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="{x:Static p:Resources.AutoDownloadBlogs}" />
                        </Grid>
                        <Grid Grid.Row="11">
                            <CheckBox x:Name="checkBoxHideToolBarText"
                                          Grid.Row="1"
                                          Grid.Column="0"
                                          Margin="10"
                                          HorizontalAlignment="Left"
                                          VerticalAlignment="Center"
                                          Content="{x:Static p:Resources.HideToolBarButtonsText}"
                                          IsChecked="{Binding HideToolBarButtonsText, Mode=TwoWay}">

                                <CheckBox.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipHideToolBarButtonsText}" />
                                            <TextBlock Text="{x:Static p:Resources.ToolTipHideToolBarButtonsTextDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </CheckBox.ToolTip>
                            </CheckBox>
                        </Grid>
                        <Grid
                            Grid.Row="12"
                            Height="Auto"
                            HorizontalAlignment="Left">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Label
                                x:Name="ProgressUpdateIntervalLabel"
                                Grid.Column="0"
                                Margin="10"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="{x:Static p:Resources.ProgressUpdateInterval}">
                                <Label.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipProgressUpdate}" />
                                            <TextBlock Text="{x:Static p:Resources.ToolTipProgressUpdateDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </Label.ToolTip>
                            </Label>
                            <TextBox
                                x:Name="ProgressUpdateIntervalTextBox"
                                Grid.Column="3"
                                MinWidth="60"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center">
                                <TextBox.Text>
                                    <Binding Path="ProgressUpdateInterval" UpdateSourceTrigger="PropertyChanged" />
                                </TextBox.Text>
                                <TextBox.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipProgressUpdate}" />
                                            <TextBlock Text="{x:Static p:Resources.ToolTipProgressUpdateDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </TextBox.ToolTip>
                            </TextBox>
                        </Grid>
                        <Grid Grid.Row="13" Grid.ColumnSpan="1"
                            Height="Auto"
                            HorizontalAlignment="Left">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Label
                                x:Name="LogLevelLabel"
                                Grid.Column="0"
                                Margin="10"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="{x:Static p:Resources.LogLevel}">
                                <Label.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipLogLevel}" />
                                            <TextBlock Text="{x:Static p:Resources.ToolTipLogLevelDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </Label.ToolTip>
                            </Label>
                            <ComboBox
                                x:Name="LogLevelComboBox"
                                Grid.Column="3"
                                MinWidth="60"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                ItemsSource="{Binding ShellService.Settings.LogLevels}"
                                SelectedItem="{Binding LogLevel, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                SelectedValue="{Binding LogLevel}"
                                SelectedValuePath=".">
                                <ComboBox.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipLogLevel}" />
                                            <TextBlock Text="{x:Static p:Resources.ToolTipLogLevelDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </ComboBox.ToolTip>
                            </ComboBox>
                        </Grid>
                        <Grid Grid.Row="14" Grid.ColumnSpan="3"
                            Height="Auto"
                            HorizontalAlignment="Left">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Label
                                x:Name="LanguageLabel"
                                Grid.Column="0"
                                Margin="10"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="{x:Static p:Resources.Language}">
                                <Label.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipLanguage}" />
                                            <TextBlock Text="{x:Static p:Resources.ToolTipLanguageDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </Label.ToolTip>
                            </Label>
                            <ComboBox
                                x:Name="LanguageComboBox"
                                Grid.Column="1"
                                MinWidth="60"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                ItemsSource="{Binding ShellService.Settings.Languages}"
                                DisplayMemberPath="Value"
                                SelectedValue="{Binding Language, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                SelectedValuePath="Key">
                                <ComboBox.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipLanguage}" />
                                            <TextBlock Text="{x:Static p:Resources.ToolTipLanguageDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </ComboBox.ToolTip>
                            </ComboBox>
                            <Label
                                Grid.Column="2"
                                Margin="10"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="{x:Static p:Resources.LanguageHint}">
                            </Label>
                        </Grid>
                        <Grid Grid.Row="15" Grid.ColumnSpan="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Button
                                x:Name="buttonExportBlogs"
                                Grid.Row="0"
                                Grid.Column="0"
                                MinWidth="90"
                                Margin="10"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Command="{Binding ExportCommand}"
                                Content="{x:Static p:Resources.Export}"
                                IsEnabled="True">
                                <Button.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipExportBlogs}" />
                                            <TextBlock xml:space="preserve" Text="{x:Static p:Resources.ToolTipExportBlogsDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </Button.ToolTip>
                            </Button>
                            <TextBox
                                x:Name="exportLocationtextBox"
                                Grid.Row="0"
                                Grid.Column="1"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Text="{Binding ExportLocation, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                TextWrapping="Wrap" />
                            <Button
                                x:Name="browseExportLocationButton"
                                Grid.Row="0"
                                Grid.Column="2"
                                MinWidth="75"
                                Margin="10"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Command="{Binding BrowseExportLocationCommand}"
                                Content="{x:Static p:Resources.Browse}" />
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem Header="{x:Static p:Resources.Connection}">
                    <Grid Height="Auto" MinHeight="46">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid
                            Grid.Row="0"
                            Height="Auto"
                            MinHeight="46">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Label
                                x:Name="parallelConnectionsLabel"
                                Grid.Column="0"
                                MinWidth="140"
                                Margin="10"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="{x:Static p:Resources.ConcurrentConnections}">
                                <Label.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipConnections}" />
                                            <TextBlock Text="{x:Static p:Resources.ToolTipConnectionsDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </Label.ToolTip>
                            </Label>
                            <TextBlock
                                Grid.Column="1"
                                MinWidth="20"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Text="{Binding Value, ElementName=concurrentConnectionsSlider}"
                                TextWrapping="Wrap" />
                            <Slider
                                x:Name="concurrentConnectionsSlider"
                                Grid.Column="2"
                                MinWidth="250"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Maximum="100"
                                Minimum="1"
                                SmallChange="1"
                                Value="{Binding ConcurrentConnections, UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>
                        <Grid
                            Grid.Row="1"
                            Height="Auto"
                            MinHeight="46">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Label
                                x:Name="concurrentVideoConnectionsLabel"
                                Grid.Column="0"
                                MinWidth="140"
                                Margin="10"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="{x:Static p:Resources.ConcurrentVideoConnections}">
                                <Label.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipVideoConnections}" />
                                            <TextBlock Text="{x:Static p:Resources.ToolTipVideoConnectionsDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </Label.ToolTip>
                            </Label>
                            <TextBlock
                                Grid.Column="1"
                                MinWidth="20"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Text="{Binding Value, ElementName=concurrentVideoConnectionsSlider}"
                                TextWrapping="Wrap" />
                            <Slider
                                x:Name="concurrentVideoConnectionsSlider"
                                Grid.Column="2"
                                MinWidth="250"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Maximum="100"
                                Minimum="1"
                                SmallChange="1"
                                Value="{Binding ConcurrentVideoConnections, UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>
                        <Grid
                            Grid.Row="2"
                            Height="Auto"
                            MinHeight="46">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Label
                                x:Name="concurrentBlogsLabel"
                                Grid.Column="0"
                                MinWidth="140"
                                Margin="10"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="{x:Static p:Resources.ConcurrentBlogs}">
                                <Label.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipBlogs}" />
                                            <TextBlock Text="{x:Static p:Resources.ToolTipBlogsDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </Label.ToolTip>
                            </Label>
                            <TextBlock
                                Grid.Column="1"
                                MinWidth="20"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Text="{Binding Value, ElementName=concurrentBlogsSlider}"
                                TextWrapping="Wrap" />
                            <Slider
                                x:Name="concurrentBlogsSlider"
                                Grid.Column="2"
                                MinWidth="250"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Maximum="40"
                                Minimum="1"
                                SmallChange="1"
                                Value="{Binding ConcurrentBlogs, UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>
                        <Grid
                            Grid.Row="3"
                            Height="Auto"
                            MinHeight="46">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>


                            <Label
                                x:Name="timeOutLabel"
                                Grid.Column="2"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="{x:Static p:Resources.TimeOut}">
                                <Label.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipTimeout}" />
                                            <TextBlock Text="{x:Static p:Resources.ToolTipTimeoutDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </Label.ToolTip>
                            </Label>
                            <TextBox
                                x:Name="timeOutComboBox"
                                Grid.Column="3"
                                MinWidth="40"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center">
                                <TextBox.Text>
                                    <Binding Path="TimeOut" UpdateSourceTrigger="PropertyChanged">
                                        <Binding.ValidationRules>
                                            <vr:IntRangeRule />
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox.Text>
                                <TextBox.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipTimeout}" />
                                            <TextBlock Text="{x:Static p:Resources.ToolTipTimeoutDescription}" />
                                        </StackPanel>
                                    </ToolTip>
                                </TextBox.ToolTip>
                            </TextBox>
                        </Grid>
                        <Grid
                            Grid.Row="4"
                            Height="Auto"
                            MinHeight="46">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Label
                                x:Name="scanConnectionsLabel"
                                Grid.Column="2"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="{x:Static p:Resources.ScanConnections}">
                                <Label.ToolTip>
                                    <ToolTip>
                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" Text="{x:Static p:Resources.ToolTipScan}" />
